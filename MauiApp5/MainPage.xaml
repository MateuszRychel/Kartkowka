<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp5.MainPage"
             x:Name="background" >

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="R"></Label>
            <Slider
                x:Name="r"
                Minimum="0"
                Maximum="255" />

            <Label Text="G"></Label>
            <Slider
                x:Name="g"
                Minimum="0"
                Maximum="255" />
            
            <Label Text="B"></Label>
            <Slider
                x:Name="b"
                Minimum="0"
                Maximum="255" />


            <Button
                Text="Change color" 
                Clicked="ChangeColor"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
